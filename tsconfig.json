{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "target": "esnext", // 指定ECMAScript目标版本
    "module": "esnext", // 指定模块化类型
    "declaration": true, // 生成 `.d.ts` 文件
    "outDir": "./dist", // 输出目录
    "rootDir": "./src", // 源代码目录
    "strict": true, // 开启严格的类型检测
    "resolveJsonModule": true, // 解决 ts 导入 json 文件报错问题
    "moduleResolution": "node", // 解决 resolveJsonModule 报错
  }
}